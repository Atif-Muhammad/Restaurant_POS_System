{
  "name": "pos-frontend",
  "private": true,
  "version": "0.0.0",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"bun run dev\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "node scripts/prepare-backend-final.cjs && vite build && electron-builder",
    "app:run": "chmod +x \"./release/FryDate POS-0.0.0.AppImage\" && \"./release/FryDate POS-0.0.0.AppImage\"",
    "app:run:sandbox": "chmod +x \"./release/FryDate POS-0.0.0.AppImage\" && \"./release/FryDate POS-0.0.0.AppImage\" --no-sandbox"
  },
  "build": {
    "appId": "com.fryDate.app",
    "productName": "FryDate POS",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/backend",
        "to": "backend"
      }
    ],
    "asarUnpack": [
      "resources/node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    },
    "afterPack": "./afterPack.cjs"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.5.0",
    "@tanstack/react-query": "^5.66.0",
    "axios": "^1.7.9",
    "bcrypt": "^6.0.0",
    "framer-motion": "^11.18.1",
    "mongodb-memory-server": "^11.0.1",
    "notistack": "^3.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.4.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.1.3",
    "react-to-print": "^3.2.0",
    "recharts": "^3.7.0",
    "tailwind-scrollbar-hide": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "electron-is-dev": "^3.0.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.5",
    "wait-on": "^9.0.3"
  }
}